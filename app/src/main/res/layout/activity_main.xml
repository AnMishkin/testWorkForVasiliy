<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2A174C"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textTitle1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="#590000"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/result_for_input_1"
                android:textColor="@color/white"
                android:textColorHighlight="@color/white"
                android:textColorHint="@color/white" />

            <TextView
                android:id="@+id/textResult1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="189dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textTitle2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#590000"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/result_for_input_2"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textResult2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/white" />

        </LinearLayout>

        <EditText
            android:id="@+id/resultFromSecondActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#673AB7"
            android:ems="10"
            android:hint="Here will be the result"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonToSecondTask"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/to_second_task" />

        <Button
            android:id="@+id/buttonToThirdTask"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:text="@string/To_third_tast"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvResultOkHttp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:visibility="gone" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>